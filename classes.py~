class piece():
    def __str__(self):
        return (self.__doc__)
    def rotation(self):
        pass
class I(piece):
    "cyan"
    point=[0,5]
    liste=[[-1,5],[0,5],[1,5],[2,5]]
    couleur=(102,255,255)

